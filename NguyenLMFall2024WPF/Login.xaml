<Window x:Class="NguyenLMFall2024WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenLMFall2024WPF"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Login" Height="500" Width="550">
    <Grid>
        <Border>
            <StackPanel Margin="20">

                <Label Content="Login" FontSize="30" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="Email:" FontSize="25"/>
                <TextBox Name="txtEmail" FontSize="25" Background="#FFE5E5E5"/>
                <Label Content="Password:" FontSize="25"/>
                <PasswordBox Name="txtPassword" FontSize="25" Background="#FFE5E5E5"/>
                <Button Name="btnLogin" Click="btnLogin_Click" Content="Login" Margin="60 20"  FontSize="25"/>
                <Button Name="btnCancel" Click="btnCancel_Click" Content="Cancel" Margin="60 0"  FontSize="25"/>
                <Button Name="btnViewNewsArticle" Click="btnViewNewsArticle_Click" Content="View News Article" Margin="60 20"  FontSize="25"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
